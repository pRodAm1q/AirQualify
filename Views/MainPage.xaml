<Page x:Class="AirQualify.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid Background="White">
        <Border CornerRadius="5" BorderBrush="#000" BorderThickness="1"
        VerticalAlignment="Center" UseLayoutRounding="True" Height="45" Width="280">
            <TextBox BorderThickness="0" Background="Transparent"
                     x:Name="SearchBox"
                     Height="45"  Width="280"
                     Foreground="#a6a39a"
                      FontSize="30" TextAlignment="Center"
                    ToolTip="Введите название города"
                     />

        </Border>
        <Button Height="50" Width="50" Margin="504,192,146,192" Content="Search" Click="SearchButton"
                ToolTip="Произошел поиск"/>
        <Button x:Name ="NewPage" Height="50" Width="50" Margin="30,39,720,361" Content="+" FontSize="20" Click="NewPage_Click"/>

    </Grid>
</Page>
